<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    >
    <LinearLayout
        android:id="@+id/recycler_view_llayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_view_height"
        android:orientation="horizontal"
        >
        
	    <TextView 
	        android:id="@+id/recycler_view_item_text"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/text_view_height"
	        android:gravity="center"
	        android:textColor="@android:color/black"
	        android:background="@android:color/white"
	        />
	    <RelativeLayout 
	        android:id="@+id/recycler_view_item_rl"
	        android:layout_height="match_parent"
	        android:layout_width="180dp"
	        android:gravity="center"
	        android:background="@color/col_red"
	        >
	        <TextView 
	            android:id="@+id/recycler_view_item_rl_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/dont_show_any_more"
	            android:textColor="@android:color/black"
	            />
	        <ImageView
	            android:id="@+id/recycler_view_item_rl_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/top_float_cancel_selected"
	            android:visibility="gone"
	            />
	    </RelativeLayout>
    </LinearLayout>

</LinearLayout>
